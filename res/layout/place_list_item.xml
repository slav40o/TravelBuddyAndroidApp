<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="@dimen/places_itemlist_imagewidth"
        android:layout_height="@dimen/places_itemlist_imageheight"
        android:src="@drawable/ic_launcher" />

    <Space
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/placeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/places_itemlist_titlesize" />

        <TextView
            android:id="@+id/placeCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="@dimen/places_itemlist_coutrysize" />
    </LinearLayout>

</LinearLayout>